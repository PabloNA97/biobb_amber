{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_amber/json_schemas/1.0/pmemd_mdrun",
    "name": "biobb_amber PmemdMDRun",
    "title": "Wrapper of the AmberTools (AMBER MD Package) pmemd tool module.",
    "description": "Runs molecular dynamics using pmemd tool from the AMBER MD package.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "AMBER pmemd",
            "version": ">20",
            "license": "other"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_top_path",
        "input_crd_path",
        "output_log_path",
        "output_traj_path",
        "output_rst_path"
    ],
    "properties": {
        "input_top_path": {
            "type": "string",
            "description": "Input topology file (AMBER ParmTop)",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/data/pmemd/cln025.prmtop",
            "enum": [
                ".*\\.top$",
                ".*\\.parmtop$",
                ".*\\.prmtop$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.top$",
                    "description": "Input topology file (AMBER ParmTop)",
                    "edam": "format_3881"
                },
                {
                    "extension": ".*\\.parmtop$",
                    "description": "Input topology file (AMBER ParmTop)",
                    "edam": "format_3881"
                },
                {
                    "extension": ".*\\.prmtop$",
                    "description": "Input topology file (AMBER ParmTop)",
                    "edam": "format_3881"
                }
            ]
        },
        "input_crd_path": {
            "type": "string",
            "description": "Input coordinates file (AMBER crd)",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/data/pmemd/cln025.inpcrd",
            "enum": [
                ".*\\.crd$",
                ".*\\.mdcrd$",
                ".*\\.inpcrd$",
                ".*\\.rst$",
                ".*\\.rst7$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.crd$",
                    "description": "Input coordinates file (AMBER crd)",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.mdcrd$",
                    "description": "Input coordinates file (AMBER crd)",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.inpcrd$",
                    "description": "Input coordinates file (AMBER crd)",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.rst$",
                    "description": "Input coordinates file (AMBER crd)",
                    "edam": "format_3886"
                },
                {
                    "extension": ".*\\.rst7$",
                    "description": "Input coordinates file (AMBER crd)",
                    "edam": "format_3886"
                }
            ]
        },
        "input_mdin_path": {
            "type": "string",
            "description": "Input configuration file (MD run options) (AMBER mdin)",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/data/pmemd/npt.mdin",
            "enum": [
                ".*\\.mdin$",
                ".*\\.in$",
                ".*\\.txt$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.mdin$",
                    "description": "Input configuration file (MD run options) (AMBER mdin)",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.in$",
                    "description": "Input configuration file (MD run options) (AMBER mdin)",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.txt$",
                    "description": "Input configuration file (MD run options) (AMBER mdin)",
                    "edam": "format_2330"
                }
            ]
        },
        "input_cpin_path": {
            "type": "string",
            "description": "Input constant pH file (AMBER cpin)",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/data/pmemd/cln025.cpin",
            "enum": [
                ".*\\.cpin$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.cpin$",
                    "description": "Input constant pH file (AMBER cpin)",
                    "edam": "format_2330"
                }
            ]
        },
        "input_ref_path": {
            "type": "string",
            "description": "Input reference coordinates for position restraints",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/data/pmemd/sander.rst",
            "enum": [
                ".*\\.crd$",
                ".*\\.mdcrd$",
                ".*\\.inpcrd$",
                ".*\\.rst$",
                ".*\\.rst7$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.crd$",
                    "description": "Input reference coordinates for position restraints",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.mdcrd$",
                    "description": "Input reference coordinates for position restraints",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.inpcrd$",
                    "description": "Input reference coordinates for position restraints",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.rst$",
                    "description": "Input reference coordinates for position restraints",
                    "edam": "format_3886"
                },
                {
                    "extension": ".*\\.rst7$",
                    "description": "Input reference coordinates for position restraints",
                    "edam": "format_3886"
                }
            ]
        },
        "output_log_path": {
            "type": "string",
            "description": "Output log file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/reference/pmemd/sander.log",
            "enum": [
                ".*\\.log$",
                ".*\\.out$",
                ".*\\.txt$",
                ".*\\.o$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.log$",
                    "description": "Output log file",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.out$",
                    "description": "Output log file",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.txt$",
                    "description": "Output log file",
                    "edam": "format_2330"
                },
                {
                    "extension": ".*\\.o$",
                    "description": "Output log file",
                    "edam": "format_2330"
                }
            ]
        },
        "output_traj_path": {
            "type": "string",
            "description": "Output trajectory file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/reference/pmemd/sander.x",
            "enum": [
                ".*\\.trj$",
                ".*\\.crd$",
                ".*\\.mdcrd$",
                ".*\\.x$",
                ".*\\.netcdf$",
                ".*\\.nc$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.trj$",
                    "description": "Output trajectory file",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.crd$",
                    "description": "Output trajectory file",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.mdcrd$",
                    "description": "Output trajectory file",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.x$",
                    "description": "Output trajectory file",
                    "edam": "format_3878"
                },
                {
                    "extension": ".*\\.netcdf$",
                    "description": "Output trajectory file",
                    "edam": "format_3650"
                },
                {
                    "extension": ".*\\.nc$",
                    "description": "Output trajectory file",
                    "edam": "format_3650"
                }
            ]
        },
        "output_rst_path": {
            "type": "string",
            "description": "Output restart file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/reference/pmemd/sander.rst",
            "enum": [
                ".*\\.rst$",
                ".*\\.rst7$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.rst$",
                    "description": "Output restart file",
                    "edam": "format_3886"
                },
                {
                    "extension": ".*\\.rst7$",
                    "description": "Output restart file",
                    "edam": "format_3886"
                }
            ]
        },
        "output_cpout_path": {
            "type": "string",
            "description": "Output constant pH file (AMBER cpout)",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/reference/pmemd/sander.cpout",
            "enum": [
                ".*\\.cpout$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.cpout$",
                    "description": "Output constant pH file (AMBER cpout)",
                    "edam": "format_2330"
                }
            ]
        },
        "output_cprst_path": {
            "type": "string",
            "description": "Output constant pH restart file (AMBER rstout)",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/reference/pmemd/sander.cprst",
            "enum": [
                ".*\\.cprst$",
                ".*\\.rst$",
                ".*\\.rst7$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.cprst$",
                    "description": "Output constant pH restart file (AMBER rstout)",
                    "edam": "format_3886"
                },
                {
                    "extension": ".*\\.rst$",
                    "description": "Output constant pH restart file (AMBER rstout)",
                    "edam": "format_3886"
                },
                {
                    "extension": ".*\\.rst7$",
                    "description": "Output constant pH restart file (AMBER rstout)",
                    "edam": "format_3886"
                }
            ]
        },
        "output_mdinfo_path": {
            "type": "string",
            "description": "Output MD info",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_amber/raw/master/biobb_amber/test/reference/pmemd/sander.mdinfo",
            "enum": [
                ".*\\.mdinfo$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.mdinfo$",
                    "description": "Output MD info",
                    "edam": "format_2330"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "mdin": {
                    "type": "object",
                    "default": {},
                    "wf_prop": false,
                    "description": "pmemd MD run options specification. (Used if *input_mdin_path* is None)"
                },
                "pmemd_path": {
                    "type": "string",
                    "default": "pmemd",
                    "wf_prop": false,
                    "description": "pmemd binary path to be used."
                },
                "simulation_type": {
                    "type": "string",
                    "default": "minimization",
                    "wf_prop": false,
                    "description": "Default options for the mdin file. Each creates a different mdin file. ",
                    "enum": [
                        "minimization",
                        "min_vacuo",
                        "NVT",
                        "npt",
                        "free"
                    ],
                    "property_formats": [
                        {
                            "name": "minimization",
                            "description": "Runs an energy minimization"
                        },
                        {
                            "name": "min_vacuo",
                            "description": "Runs an energy minimization in vacuo"
                        },
                        {
                            "name": "NVT",
                            "description": "Runs an NVT equilibration"
                        },
                        {
                            "name": "npt",
                            "description": "Runs an NPT equilibration"
                        },
                        {
                            "name": "free",
                            "description": "Runs a MD simulation"
                        }
                    ]
                },
                "mpi_bin": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the MPI runner. Usually \"mpirun\" or \"srun\"."
                },
                "mpi_np": {
                    "type": "integer",
                    "default": 0,
                    "wf_prop": false,
                    "description": "Number of MPI processes. Usually an integer bigger than 1.",
                    "min": 0,
                    "max": 1000,
                    "step": 1
                },
                "mpi_hostlist": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the MPI hostlist file."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}